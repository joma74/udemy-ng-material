{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "name": "Launch env-cmd",
          "program": "${workspaceFolder}/node_modules/.bin/env-cmd",
          "args": ["-f", "./release/semantic-release-env.js", "printenv", "|", "sort", "|", "grep", "GIT"],
          "env": {"DEBUG":"*,-semantic-release:*", "NODE_DEBUG":"spawn"},
          // see https://github.com/Microsoft/vscode/issues/19750#issuecomment-331236848 
          "console": "integratedTerminal"
      },
      {
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "name": "Launch sr evalnv dry",
        "program": "/home/joerg/.npm-global/bin/semantic-release",
        "args": ["--no-ci", "-d", "2>&1" ,"|" ,"tee", "release/semantic-release-evalnv-dry.log"],
        "env": {"DEBUG":"*,-semantic-release:*", "NODE_DEBUG":"spawn"},
        // see https://github.com/Microsoft/vscode/issues/19750#issuecomment-331236848 
        "console": "integratedTerminal",
      },
      {
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "name": "Launch sr evalnv",
        "program": "/home/joerg/.npm-global/bin/semantic-release",
        "args": ["--no-ci", "--debug", "2>&1" ,"|" ,"tee", "release/semantic-release-evalnv.log"],
        "env": {"DEBUG":"*,-semantic-release:*", "NODE_DEBUG":"spawn"},
        // see https://github.com/Microsoft/vscode/issues/19750#issuecomment-331236848 
        "console": "integratedTerminal"
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Debug Current Program",
          "program": "${file}",
          "env": {"DEBUG":"*"}
      },
    {
      "name": "Launch Chrome localhost",
      "type": "chrome",
      "request": "launch",
      "port": 9247,
      "webRoot": "${workspaceFolder}",
      "url": "http://localhost:4200/"
    }
  ]
}