{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "name": "Launch Program",
          "program": "${workspaceFolder}/node_modules/.bin/env-cmd",
          "args": ["-f", "./.semantic-release-env.js", "node", "index.js"]
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Debug Current Program",
          "program": "${file}"
      },
    {
      "name": "Launch Chrome localhost",
      "type": "chrome",
      "request": "launch",
      "port": 9247,
      "webRoot": "${workspaceFolder}",
      "url": "http://localhost:4200/"
    }
  ]
}