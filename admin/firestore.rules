rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // deny all - See https://fireship.io/snippets/firestore-rules-recipes/ 
    // "At runtime, Firebase rules look for the first valid allow == true rule and NOT vice-versa."
    match /{document=**} {
        allow read, write: if false;
    }
    // read only
    match /availableExercises/{doc} {
      allow read: if request.auth.uid != null;
    }
    // read and create if owned
    match /{uid}/exercises/past/{doc} {
      allow read, create: if request.auth.uid == uid;
    }
  }
}